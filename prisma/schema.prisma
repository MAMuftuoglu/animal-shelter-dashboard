generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum AnimalStatus {
  NEWLY_FOUND
  READY_TO_ADOPT
  UNAVAILABLE
  ADOPTED
}

enum AnimalType {
  DOG
  CAT
  BIRD
  OTHER
}

model Animal {
  id          String       @id @default(uuid())
  name        String
  description String?
  status      AnimalStatus @default(NEWLY_FOUND)
  type        AnimalType
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}